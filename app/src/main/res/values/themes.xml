<resources>
    <!-- Base application theme. -->
    <style name="Theme.LunchTray" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="radioButtonStyle">@style/Widget.LunchTray.CompoundButton.RadioButton</item>
        <item name="android:textViewStyle">@style/TextAppearance.MdcTypographyStyles.Subtitle1
        </item>
    </style>
</resources>